@model TraductorMVC.Models.ResultViewModel

@if (Model.IsError)
    {

        <div class="container">
            <h1></h1>
            <p>@Model.Message</p>
        </div>

    }
    else
    {
        <div class="container" style="background-color: aqua">

            <div class="row">
                <div class="col-md-4">
                    <h1 class="bg-success">Su traducción es: </h1>
                    <p class="bg-success">@Model.Message</p>
                    <h3 class="col-lg-9" style="border-block:double">@Model.TranslateWord</h3>
                </div>
                <div class="col-md-4" style="background-color:white">

                </div>
                <div class="col-md-4" style="background-color:white">

                </div>
            </div>
        </div>
    }


